<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ctLayout"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/bogoc">
        <ImageView
            android:id="@+id/img_ItemBill"
            android:layout_width="120dp"
            android:layout_height="130dp"
            android:background="@drawable/bogoc"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:scaleType="centerCrop"
            android:src="@drawable/taopho"/>
        <TextView
            android:id="@+id/tv_nameItemBill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/img_ItemBill"
            android:text="Tào phớ truyền thống"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:textSize="18dp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/tv_priceItemBill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_nameItemBill"
            app:layout_constraintLeft_toRightOf="@id/img_ItemBill"
            android:text="Giá: 5000 VND"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="5dp"
            android:textSize="18dp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/tv_quanityItemBill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_priceItemBill"
            app:layout_constraintLeft_toRightOf="@id/img_ItemBill"
            android:text="Số lượng: 5"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="5dp"
            android:textSize="18dp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/tv_tItemBill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="18dp"
            android:textColor="#08A697"
            android:text="150.000 VND"
            android:layout_margin="8dp"/>
        <ImageView
            android:id="@+id/img_cancleBill"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="2dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/cancle"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>